<%- model_class = Tasks -%>
<div class="page-header">
  <h1><%=t '.title', :default => Tasks %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:task_name) %></dt>
      <dd><pre class="prettyprint"><%= @tasks.task_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:task_description) %></dt>
      <dd><pre class="prettyprint"><%= @tasks.task_description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:task_completion_date) %></dt>
      <dd><pre class="prettyprint"><%= @tasks.task_completion_date %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:task_completion_time) %></dt>
      <dd><pre class="prettyprint"><%= @tasks.task_completion_time %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:status) %></dt>
      <dd><pre class="prettyprint"><%= @tasks.status %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              tasks_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_tasks_path(@tasks), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              tasks_path(@tasks),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>


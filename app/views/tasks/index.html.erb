<%- model_class = Tasks -%>
<div class="page-header">
  <h1><%=t '.title', :default => Tasks %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:task_name) %></th>
      <th><%= model_class.human_attribute_name(:task_description) %></th>
      <th><%= model_class.human_attribute_name(:task_completion_date) %></th>
      <th><%= model_class.human_attribute_name(:task_completion_time) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |tasks| %>
      <tr>
        <td><%= tasks.id %></td>
        <td><%= tasks.task_name %></td>
        <td><%= tasks.task_description %></td>
        <td><%= tasks.task_completion_date %></td>
        <td><%= tasks.task_completion_time %></td>
        <td><%= tasks.status %></td>
        <td><%=l tasks.created_at, format: :long %></td>
        <td>
          <%= link_to tasks_path(tasks), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to tasks_path(tasks), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_tasks_path,
            :class => 'btn btn-primary' %>

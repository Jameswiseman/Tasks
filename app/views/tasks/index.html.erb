<h1>Listing tasks</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Task name</th>
      <th>Task description</th>
      <th>Task completion date</th>
      <th>Task completion time</th>
      <th>Status</th>
      <th>Clients</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.user %></td>
        <td><%= task.task_name %></td>
        <td><%= task.task_description %></td>
        <td><%= task.task_completion_date %></td>
        <td><%= task.task_completion_time %></td>
        <td><%= task.status %></td>
        <td><%= task.clients %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

